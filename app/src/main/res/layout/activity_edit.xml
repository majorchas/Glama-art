<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.gen_chas.camera.Edit">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgEdit2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_below="@+id/btn_SAVE" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/imgEdit2"
        android:layout_alignEnd="@+id/imgEdit2" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="    Effects    "
              />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_eftone"
                android:background="@drawable/effectone"

                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_efttwo"
                android:background="@drawable/effecttwo"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_eftthree"
                android:background="@drawable/effectthree"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_eftfour"
                android:background="@drawable/effectfour"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_eftfive"
                android:background="@drawable/effectfive"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_eftsix"
                android:background="@drawable/effectsix"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_eftseven"
                android:background="@drawable/effectseven"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_efteight"
                android:background="@drawable/effecteight"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Frames    "

                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_lyruno"
                android:background="@drawable/layeruno"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_lyrdupo"
                android:background="@drawable/layerduo"
                />
            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:id="@+id/btn_lyrtre"
                android:background="@drawable/layertre"
                />

        </LinearLayout>
        </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btn_SAVE"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#33B8FF"
        android:textColor="#FFFFFF"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:id="@+id/btn_undo"
        android:background="#6100FF"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/imgEdit2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
